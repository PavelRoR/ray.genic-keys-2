#main
	padding 20px 0 60px
	background-color: #e2eaed
	background-image url(../img/backgrounds/author_bg.png)
	background-repeat no-repeat
	background-position: center
	text-align: center
.bordered-container-main
	max-width 960px
	margin 0 auto
.pre
	font-size: 20px
	color  #000
.main-title
	font-size: 40px
	position relative
	color #2a2d3e
	margin 20px 0
	line-height: 1.6
	&:before
	&:after
		content: ''
		display block
		position: absolute
		width 100%
		height 4px
		left 0
		right 0
		margin 0 auto
		width 100%
		max-width 477px
		border-top: 1px solid #8F9090
		border-bottom: 1px solid #8F9090
	&:before
		top 0
	&:after
		bottom: 0
.main-title-ht
	font-size: 26px
	position relative
	color #2a2d3e
	margin 20px 0
	line-height: 1.6
.main-text
	color: #000
	font-size: 20px
.main-info
	color #000
	&:last-of-type
		margin  10px 0 0
.video-wrapper-main
	margin 20px auto 0
	max-width 560px
#main.remind
	min-height calc(100vh - 215px)
.remind-main-title
	margin 90px 0 20px
	font-size: 30px
	line-height: 1.4
	a
		display: inline-block
		color: myDarkGreen
		text-decoration: underline
		&:focus
			text-decoration: none
		&:hover
			text-decoration: none
.remind-main-subtitle
	font-size: 26px