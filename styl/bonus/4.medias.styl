@media screen and (min-width 2295px)
	.container
		width 1400px
	.video-wrapper-main
		max-width 860px
	#feedback
		min-height calc(100vh - 970px)
	.main-subtitle
		font-size: 20px
	.main-text
		font-size: 18px
@media screen and (max-width 991px)
	header
		padding 15px 0
	#logo
		float: none
		margin 0 auto 5px
		display block
	.contacts
		float: none
		text-align: center
	.contact
		display: inline-block
		margin 5px 5px 0
		line-height: 17px
	.main-text
		margin-bottom: 30px
	.bordered-container-ht .inner-bordered-container .bordered-container-wrapper
		padding 20px 20px 0
@media screen and (max-width 767px)
	#vk
		margin-bottom: 25px
@media screen and (max-width 485px)
	#logo
		width 160px
		height 14px
	.contact
		font-size: 12px
		line-height: 15px
		background-size: 15px
		padding-left: 18px
	.contact.contact-email
		padding-left: 26px
	.inner-bordered-container
	.bordered-container-wrapper
		padding 20px
	#main
		padding 30px 0
	.main-title
		font-size: 32px
		margin 10px 0 15px
		line-height: 1.2;
		padding: 10px 0;
	.main-info
		font-size: 20px
	.main-text
		margin-bottom: 20px
	#feedback
		padding 40px 0
	.general-title
		font-size: 26px
		margin-bottom: 30px
	.general-title .span-main::before
		width: 42px;
		height: 42px;
		top: -31px;
		left: -23px;
	footer
		padding 15px 0
		font-size: 12px
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
	.main-title-ht
		font-size: 22px
		line-height: 1.3
	.bordered-container-ht .inner-bordered-container .bordered-container-wrapper
		padding 15px 15px 0
@media screen and (max-width 385px)
	body
	.pre
	.main-info
		font-size: 18px
	header
	footer
		padding 10px 0
	.bordered-container-wrapper, .inner-bordered-container
		padding 10px
	.main-title
		font-size: 28px
	#main
		padding 10px 0 30px
	#feedback
		padding 30px 0
	.remind-main-title
		font-size: 23px
		line-height: 1.3
	.remind-main-subtitle
		font-size: 22px
	.main-title-ht
		font-size: 20px