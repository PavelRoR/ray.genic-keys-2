#main
	padding 22px 0 30px
	background-color: #e2eaed
	background-image url(../img/images/yurina_main.png), url(../img/images/roleva_main.png)
	background-repeat no-repeat, no-repeat
	background-position: left  bottom 190%, right bottom 130%
	position relative
	text-align: center
	&:before
		content: ''
		display block
		position: absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		height 100%
		background-color: rgba(#1f1f1f,.3)
		z-index 0
	.container
		position relative
		z-index 5
.main-container
	width 100%
	max-width 660px
	padding 15px
	background-color: rgba(#ffffff, .8)
	border: 4px double #fff
	margin 0 auto 20px
	background-clip: content-box
.main-inner-container
	padding 35px 20px
.pre
	color #000
.main-title
	font-size: 40px
	position relative
	color #2a2d3e
	margin 30px 0 
	line-height: 1.6
	&:before
	&:after
		content: ''
		display block
		position: absolute
		width 100%
		height 4px
		left 0
		right 0
		margin 0 auto
		width 100%
		max-width 477px
		border-top: 1px solid #8F9090
		border-bottom: 1px solid #8F9090
	&:before
		top 0
	&:after
		bottom: 0
.main-info
	color #000
	&:last-of-type
		margin  10px 0 0
.main-subtitle
	width 100%
	max-width 520px
	margin 15px auto 25px
	font-size: 16px
	color #2a2d3e
.video-wrapper-main
	max-width 315px
	background-color #fff