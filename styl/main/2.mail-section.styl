#mail-section
	padding 50px 0
	background-color: rgb(42, 45, 62);
	box-shadow: inset 0px 3px 7px 0px rgba(0, 0, 0, 0.6)
.mail-form-container
	padding-left: 150px
	background-image url(../img/icons/envelope.svg)
	background-repeat no-repeat
	background-position: left center
.form
	overflow hidden
	border 3px solid #FFC55A
	padding 20px 60px
	overflow hidden
.form-title
	display: inline-block
	font-size: 28px;
	font-family: PH
	color: rgb(239, 192, 94);
	line-height: 1.4
	float left
	position relative
	top -2px
	span
		display: inline-block
		font-size: 48px
		font-weight: bold
		margin 0 55px
		line-height: .5
		position relative
		top 4px
.email-block
	display: inline-block
	float left
.input
	display: inline-block
	border: 2px solid rgb(239, 192, 94);
	background-color: rgb(255, 255, 255);
	width 100%
	max-width: 219px;
	line-height: 32px;
	margin-right: 54px
	padding 0 10px
	font-size: 22px;
	font-family: PH
	color: rgb(42, 45, 62);
@-webkit-keyframes autofill
	to
		font-size: 22px
		color: rgb(42, 45, 62);
		background-color: rgb(255, 255, 255);
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.button-form
	border 2px solid rgb(246, 196, 98);
	background-color: rgb(246, 196, 98);
	width 100%
	max-width 219px;
	line-height: 32px;
	font-size: 28px;
	font-family: PH
	color: rgb(42, 45, 62);
	text-align: center
	display: inline-block
	transition: all .4s ease
	float: right
	&:hover
		background-color: transparent
		color rgb(246, 196, 98);
.checking {
	display: table;
	width 100%
	max-width 480px
	margin: 10px auto 0
	text-align: left
}

.checking .check-label {
	line-height: 20px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 25px;
	text-align: left;
	font-size: 14px
	color #aaa
}

.checking .check-label a
	text-decoration: underline
	display: inline
	color #aaa
	&:focus
		text-decoration: underline
		color #aaa
	&:hover
		text-decoration: none
		color #aaa

.checking .check-label:before {
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 15px;
	height: 15px;
	border 1px solid #b6b8c0
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 3px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 3px solid #fff
	border-right: 3px solid #fff
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: transparent

}

.check:checked + .check-label:after {
	opacity: 1;
	top: -3px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}