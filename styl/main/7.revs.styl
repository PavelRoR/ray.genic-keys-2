.carousel-inner
	width 100%
	max-width 650px
	margin 0 auto
	border: 2px solid #4c4c4c
#video-revs-slider
	margin-bottom: 50px
.carousel-indicators
	position: static
	margin 0 auto
	li
		border-color:  #4c4c4c
		transition: all .4s ease
	.active
		background-color: #4c4c4c
.carousel-control
	font-size: 48px
	font-weight: bold
	color #2a2d3e
	text-shadow: none
	background-color: none
	opacity 1
	top calc(50% - 48px)
	height 48px
	line-height 48px
	&:focus
		color #2a2d3e
.carousel-control.left
.carousel-control.right
	background-image: none
.carousel-inner > .item > a > .revs-img
	background-color #fff
	height 270px
	display block
	margin 0 auto
	object-fit: contain
	object-position: center
	width 100%